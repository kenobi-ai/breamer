{
  "name": "breamer",
  "version": "0.1.0",
  "description": "High-fidelity, low-latency browser streaming service",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\"",
    "dev:server": "tsx watch --expose-gc --max-old-space-size=2048 src/server/index.ts",
    "dev:lightpanda": "BROWSER_WS_ENDPOINT=ws://127.0.0.1:9222 tsx watch --expose-gc --max-old-space-size=2048 src/server/index.ts",
    "build": "pnpm run build:server",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node --expose-gc --max-old-space-size=2048 dist/index.js",
    "dev:workers": "wrangler dev",
    "deploy:workers": "pnpm run build:container && wrangler deploy",
    "build:container": "docker build -t breamer:latest .",
    "login:workers": "wrangler login",
    "tail:workers": "wrangler tail"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.36.0",
    "@clerk/express": "^1.7.12",
    "@cloudflare/containers": "^0.0.26",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "puppeteer": "^23.11.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250826.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "wrangler": "^4.33.0"
  }
}